<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/plugin-install.dtd">
<install type="plugin" group="system" version="1.5">
	<name>System - Modalizer</name>
	<description>PLG_SYSTEM_MODALIZER_DESC</description>
	<version>3.3.0FREE</version>
	<creationDate>February 2013</creationDate>
	<author>NoNumber (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>http://www.nonumber.nl</authorUrl>
	<copyright>Copyright Â© 2012 NoNumber All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<!-- Files -->
	<files>
		<filename plugin="modalizer">modalizer</filename>
		<folder>modalizer</folder>
	</files>

	<!-- Parameters -->
	<params addpath="/plugins/system/nnframework/fields">
		<param name="@loadlanguage" type="nn_loadlanguage" extension="plg_system_modalizer" />
		<param name="@license" type="nn_license" extension="MODALIZER" />
		<param name="@version" type="nn_version" extension="MODALIZER" xml="/plugins/system/modalizer.xml" />
		<param name="@header" type="nn_header"
			label="MODALIZER"
			description="MODALIZER_DESC"
			xml="/plugins/system/modalizer.xml"
			image="/plugins/system/modalizer/images/logo.png"
			image_w="120" image_h="160"
			url="http://www.nonumber.nl/modalizer"
			help_url="http://www.nonumber.nl/modalizer" />

		<param name="modal_type" type="nn_radiolist" default="colorbox" label="MDL_MODAL_TYPE" description="MDL_MODAL_TYPE_DESC">
			<option value="core">Joomla! Core (SqueezeBox)</option>
			<option value="colorbox">ColorBox v1.3.32</option>
			<option value="">* FancyBox v2.1.4</option>
			<option value="">* LyteBox v5.5</option>
			<option value="">* ShadowBox v3.0.3</option>
		</param>
		<param name="@toggler_notice_modal_type_a" type="nn_toggler" param="modal_type" value="" />
		<param name="@notice_modal_type" type="nn_plaintext" label="*" description="" default="NN_ONLY_AVAILABLE_IN_PRO" />
		<param name="@toggler_notice_modal_type_b" type="nn_toggler" />

		<!-- Modal Types -->
		<!-- SqueezeBox -->
		<param name="@toggler_core_a" type="nn_toggler" param="modal_type" value="core" />
		<param name="@block_core_a" type="nn_block" start="1" label="MDL_SQUEEZEBOX" />
		<param name="@block_core_mootools" type="nn_block" description="MDL_MOOTOOLS_FRAMEWORK_DESC" />
		<param name="@block_core_b" type="nn_block" end="1" />
		<param name="@toggler_core_b" type="nn_toggler" />

		<!-- ColorBox -->
		<param name="@toggler_colorbox_a" type="nn_toggler" param="modal_type" value="colorbox," />
		<param name="@block_colorbox_a" type="nn_block" start="1" label="MDL_COLORBOX" />
		<param name="@block_colorbox_jquery" type="nn_block" description="MDL_JQUERY_FRAMEWORK_DESC" />
		<param name="modal_colorbox_style" type="folderlist" directory="plugins/system/modalizer/modals/colorbox/" filter="style" hide_none="1" hide_default="1" default="style1" label="MDL_STYLE" description="MDL_STYLE_DESC" />
		<param name="modal_colorbox_transition" type="radio" default="" label="MDL_ANIMATION" description="MDL_ANIMATION_DESC">
			<option value="none">NONE</option>
			<option value="fade">MDL_FADE</option>
			<option value="">MDL_ELASTIC</option>
		</param>
		<param name="@block_colorbox_b" type="nn_block" end="1" />
		<param name="@toggler_colorbox_b" type="nn_toggler" />


		<!-- Click Outside -->
		<param name="@block_click_outside_a" type="nn_block" start="1" label="MDL_CLICK_OUTSIDE" />
		<param name="modal_click_outside" type="radio" default="1" label="MDL_CLICK_OUTSIDE" description="MDL_CLICK_OUTSIDE_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@block_click_outside_b" type="nn_block" end="1" />

		<!-- Open in Iframe -->
		<param name="@block_iframe_a" type="nn_block" start="1" label="MDL_OPEN_IN_IFRAME" />
		<param name="modal_iframe" type="radio" default="1" label="MDL_OPEN_IN_IFRAME" description="MDL_OPEN_IN_IFRAME_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@toggler_iframe_2a" type="nn_toggler" param="modal_type|modal_iframe" value="lytebox,shadowbox|1" />
		<param name="modal_tmpl_links" type="radio" default="1" label="MDL_CONVERT_LINKS_INSIDE_WINDOW" description="MDL_CONVERT_LINKS_INSIDE_WINDOW_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@toggler_iframe_2b" type="nn_toggler" />
		<param name="@block_iframe_b" type="nn_block" end="1" />

		<!-- Auto Group -->
		<param name="@toggler_group_a" type="nn_toggler" param="modal_type" value="colorbox,,fancybox,lytebox,shadowbox" />
		<param name="@block_group_a" type="nn_block" start="1" label="MDL_AUTO_GROUP" />
		<param name="@notice_modal_group" type="nn_plaintext" label="MDL_AUTO_GROUP" description="MDL_AUTO_GROUP_DESC" default="NN_ONLY_AVAILABLE_IN_PRO" />
		<param name="@block_group_b" type="nn_block" end="1" />
		<param name="@toggler_group_b" type="nn_toggler" />

		<!-- Default Window Sizes -->
		<param name="@block_size_a" type="nn_block" start="1" label="MDL_DEFAULT_WINDOW_SIZES" />
		<!-- Default -->
		<param name="@block_size_default_a" type="nn_block" start="1" label="Default" />
		<param name="modal_size" type="radio" default="0" label="Default" description="MDL_DEFAULT_WINDOW_SIZE_DESC">
			<option value="0">NN_AUTO</option>
			<option value="1">MDL_CUSTOM</option>
		</param>
		<param name="@toggler_size_default_a" type="nn_toggler" param="modal_size" value="1" />
		<param name="@toggler_size_default_1a" type="nn_toggler" param="modal_type" value="colorbox,,fancybox" />
		<param name="modal_width" type="text" size="10" default="80%" label="NN_WIDTH" description="MDL_WIDTH_DESC" />
		<param name="modal_height" type="text" size="10" default="80%" label="NN_HEIGHT" description="MDL_HEIGHT_DESC" />
		<param name="@toggler_size_default_1b" type="nn_toggler" />
		<param name="@toggler_size_default_2a" type="nn_toggler" param="modal_type" value="core,lytebox,shadowbox" />
		<param name="modal_width_px" type="text" size="10" default="400" label="MDL_WIDTH_PX" description="MDL_WIDTH_PX_DESC" />
		<param name="modal_height_px" type="text" size="10" default="400" label="MDL_HEIGHT_PX" description="MDL_HEIGHT_PX_DESC" />
		<param name="@toggler_size_default_2b" type="nn_toggler" />
		<param name="@toggler_size_default_b" type="nn_toggler" />
		<param name="@block_size_default_b" type="nn_block" end="1" />

		<!-- External Sites -->
		<param name="@block_size_ext_a" type="nn_block" start="1" label="MDL_EXTERNAL_SITES" />
		<param name="modal_ext_size" type="radio" default="2" label="MDL_EXTERNAL_SITES" description="MDL_DEFAULT_WINDOW_SIZE_DESC">
			<option value="0">NN_AUTO</option>
			<option value="1">MDL_CUSTOM</option>
			<option value="2">NN_USE_DEFAULT</option>
		</param>
		<param name="@toggler_size_ext_a" type="nn_toggler" param="modal_ext_size" value="1" />
		<param name="@toggler_size_ext_1a" type="nn_toggler" param="modal_type" value="colorbox,,fancybox" />
		<param name="modal_ext_width" type="text" size="10" default="80%" label="NN_WIDTH" description="MDL_WIDTH_DESC" />
		<param name="modal_ext_height" type="text" size="10" default="80%" label="NN_HEIGHT" description="MDL_HEIGHT_DESC" />
		<param name="@toggler_size_ext_1b" type="nn_toggler" />
		<param name="@toggler_size_ext_2a" type="nn_toggler" param="modal_type" value="core,lytebox,shadowbox" />
		<param name="modal_ext_width_px" type="text" size="10" default="400" label="MDL_WIDTH_PX" description="MDL_WIDTH_PX_DESC" />
		<param name="modal_ext_height_px" type="text" size="10" default="400" label="MDL_HEIGHT_PX" description="MDL_HEIGHT_PX_DESC" />
		<param name="@toggler_size_ext_2b" type="nn_toggler" />
		<param name="@toggler_size_ext_b" type="nn_toggler" />
		<param name="@block_size_ext_b" type="nn_block" end="1" />

		<!-- Images -->
		<param name="@block_size_img_a" type="nn_block" start="1" label="MDL_IMAGES" />
		<param name="@toggler_size_img_1a" type="nn_toggler" param="modal_type" value="core,colorbox,,fancybox,lytebox" />
		<param name="@modal_img_size" type="radio" default="0" label="MDL_IMAGES" description="MDL_AUTO_DESC">
			<option value="0">NN_AUTO</option>
		</param>
		<param name="@toggler_size_img_1b" type="nn_toggler" />
		<param name="@block_size_img_b" type="nn_block" end="1" />
		<param name="@block_size_b" type="nn_block" end="1" />

		<!-- Activator Settings -->
		<param name="@slide_activator" type="nn_slide" label="COM_PLUGINS_MDL_ACTIVATOR_SETTINGS_FIELDSET_LABEL" />
		<param name="@block_activator" type="nn_block" nostyle="1" description="MDL_ACTIVATOR_SETTINGS_DESC" />

		<!-- By Classnames -->
		<param name="@block_activator_class_a" type="nn_block" start="1" label="MDL_BY_CLASSNAMES" description="MDL_BY_CLASSNAMES_DESC" />
		<param name="enable_classnames" type="radio" default="1" label="NN_ENABLE">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@toggler_activator_class_a" type="nn_toggler" param="enable_classnames" value="1" />
		<param name="classnames" type="text" size="40" default="modal,modalizer" label="MDL_CLASSNAMES" description="MDL_CLASSNAMES_DESC" />
		<param name="@toggler_activator_class_b" type="nn_toggler" />
		<param name="@block_activator_class_b" type="nn_block" end="1" />

		<!-- By Filetypes -->
		<param name="@block_activator_filetypes_a" type="nn_block" start="1" label="MDL_BY_FILETYPES" description="MDL_BY_FILETYPES_DESC" />
		<param name="@notice_enable_filetypes" type="nn_plaintext" label="NN_ENABLE" description="" default="NN_ONLY_AVAILABLE_IN_PRO" />
		<param name="@block_activator_filetypes_b" type="nn_block" end="1" />

		<!-- By URLs -->
		<param name="@block_activator_urls_a" type="nn_block" start="1" label="MDL_BY_URLS" description="MDL_BY_URLS_DESC" />
		<param name="@notice_enable_urls" type="nn_plaintext" label="NN_ENABLE" description="" default="NN_ONLY_AVAILABLE_IN_PRO" />
		<param name="@block_activator_urls_b" type="nn_block" end="1" />

		<!-- By Target -->
		<param name="@block_activator_target_a" type="nn_block" start="1" label="MDL_BY_TARGET" description="MDL_BY_TARGET_DESC" />
		<param name="enable_target" type="radio" default="0" label="NN_ENABLE">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@toggler_activator_target_a" type="nn_toggler" param="enable_target" value="1" />
		<param name="target_internal" type="radio" default="1" label="MDL_ENABLE_INTERNAL" description="MDL_ENABLE_INTERNAL_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="target_external" type="radio" default="0" label="MDL_ENABLE_EXTERNAL" description="MDL_ENABLE_EXTERNAL_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="target_disablefiletypes" type="text" size="40" default="" label="MDL_DISABLE_ON_FILETYPES" description="MDL_DISABLE_ON_FILETYPES_DESC" />
		<param name="@toggler_activator_target_b" type="nn_toggler" />
		<param name="@block_activator_target_b" type="nn_block" end="1" />

		<!-- By Syntax -->
		<param name="@block_activator_syntax_a" type="nn_block" start="1" label="MDL_BY_SYNTAX" description="MDL_BY_SYNTAX_DESC" />
		<param name="enable_syntax" type="radio" default="1" label="NN_ENABLE">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@toggler_activator_syntax_a" type="nn_toggler" param="enable_syntax" value="1" />
		<param name="syntax" type="text" size="20" default="modal" label="MDL_SYNTAX_WORD" description="MDL_SYNTAX_WORD_DESC" />
		<param name="@toggler_activator_syntax_b" type="nn_toggler" />
		<param name="@block_activator_syntax_b" type="nn_block" end="1" />

		<!-- Advanced Settings -->
		<param name="@slide_advanced" type="nn_slide" label="COM_PLUGINS_MDL_ADVANCED_SETTINGS_FIELDSET_LABEL" />
		<param name="tmpl" type="text" default="component" label="MDL_SUB_TEMPLATE" description="MDL_SUB_TEMPLATE_DESC" />

		<param name="@toggler_add_redirect_a" type="nn_toggler" param="modal_type|modal_iframe" value="lytebox,shadowbox|1" />
		<param name="add_redirect" type="radio" default="1" label="MDL_ADD_REDIRECT" description="MDL_ADD_REDIRECT_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@toggler_add_redirect_b" type="nn_toggler" />

		<param name="@toggler_advanced_jquery_a" type="nn_toggler" param="modal_type" value="colorbox,,fancybox" />
		<param name="load_jquery" type="radio" default="1" label="MDL_LOAD_JQUERY_SCRIPT" description="MDL_LOAD_JQUERY_SCRIPT_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@toggler_advanced_jquery_b" type="nn_toggler" />

		<param name="disable_components" type="nn_components" default="" admin="0" show_content="1" label="NN_DISABLE_ON_COMPONENTS" description="MDL_DISABLE_ON_COMPONENTS_DESC" />
	</params>
</install>
