<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/plugin-install.dtd">
<install version="1.5.0" type="plugin" group="system">
	<name>System - Better Preview</name>
	<description>PLG_SYSTEM_BETTERPREVIEW_DESC</description>
	<version>2.2.2FREE</version>
	<creationDate>January 2013</creationDate>
	<author>NoNumber (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>http://www.nonumber.nl</authorUrl>
	<copyright>Copyright Â© 2012 NoNumber All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<!-- Files -->
	<files>
		<filename plugin="betterpreview">betterpreview.php</filename>
		<folder>betterpreview</folder>
	</files>

	<!-- Parameters -->
	<params addpath="/plugins/system/nnframework/fields">
		<param name="@loadlanguage" type="nn_loadlanguage" extension="plg_system_betterpreview" />
		<param name="@license" type="nn_license" extension="BETTER_PREVIEW" />
		<param name="@version" type="nn_version" extension="BETTER_PREVIEW" xml="/plugins/system/betterpreview.xml" />
		<param name="@dependency" type="nn_dependency"
			label="BP_THE_MODULE"
			file="/administrator/modules/mod_betterpreview/mod_betterpreview.php" />
		<param name="@header" type="nn_header"
			label="BETTER_PREVIEW"
			description="BETTER_PREVIEW_DESC"
			xml="/plugins/system/betterpreview.xml"
			image="/plugins/system/betterpreview/images/logo.png"
			image_w="120" image_h="160"
			url="http://www.nonumber.nl/betterpreview"
			help_url="http://www.nonumber.nl/betterpreview" />

		<param name="display_link" type="radio" default="both" label="NN_DISPLAY_LINK" description="NN_DISPLAY_LINK_DESC">
			<option value="icon">NN_ICON_ONLY</option>
			<option value="text">NN_TEXT_ONLY</option>
			<option value="both">NN_BOTH</option>
		</param>
		<param name="@toggler_link_1a" type="nn_toggler" param="display_link" value="icon,both" />
		<param name="show_icon" type="radio" default="1" label="BP_ICON_TYPE" description="BP_ICON_TYPE_DESC">
			<option value="2">Joomla!</option>
			<option value="1">BETTER_PREVIEW</option>
		</param>
		<param name="@toggler_link_1b" type="nn_toggler" />
		<param name="@toggler_link_2a" type="nn_toggler" param="display_link" value="text,both" />
		<param name="icon_text" type="text" default="Preview" label="NN_LINK_TEXT" description="NN_LINK_TEXT_DESC" />
		<param name="@toggler_link_2b" type="nn_toggler" />
		<param name="show_tooltip" type="radio" default="1" label="NN_DISPLAY_TOOLTIP" description="NN_DISPLAY_TOOLTIP_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="@notice_show_copy_icon" type="nn_plaintext" label="BP_SHOW_COPY_TO_CLIPBOARD_ICON" description="BP_SHOW_COPY_TO_CLIPBOARD_ICON_DESC" default="NN_ONLY_AVAILABLE_IN_PRO" />

		<param name="@hr_list_layout" type="nn_hr" />

		<param name="list_layout" type="radio" default="blog" label="BP_OPEN_SECTIONS_CATEGORIES_AS" description="BP_OPEN_SECTIONS_CATEGORIES_AS_DESC">
			<option value="-">NN_LIST</option>
			<option value="blog">BP_BLOG</option>
		</param>

		<param name="@hr_components" type="nn_hr" />

		<param name="components" type="nn_components" default="com_search" label="NN_DISABLE_ON_COMPONENTS" description="BP_DISABLE_ON_COMPONENTS_DESC" />

		<param name="@hr_homepage" type="nn_hr" />

		<param name="homepage" type="text" default="" label="BP_HOMEPAGE" description="BP_HOMEPAGE_DESC" />

		<param name="@toggler_comp_a" type="nn_toggler" param="components" value="com_banners" />
		<param name="@block_comp" type="nn_block" nostyle="1"
			description="&#60;&#99;&#101;&#110;&#116;&#101;&#114;&#62;&#60;&#105;&#109;&#103;&#32;&#115;&#114;&#99;&#61;&#34;&#109;&#111;&#100;&#117;&#108;&#101;&#115;&#47;&#109;&#111;&#100;&#95;&#98;&#101;&#116;&#116;&#101;&#114;&#112;&#114;&#101;&#118;&#105;&#101;&#119;&#47;&#98;&#101;&#116;&#116;&#101;&#114;&#112;&#114;&#101;&#118;&#105;&#101;&#119;&#47;&#105;&#109;&#97;&#103;&#101;&#115;&#47;&#112;&#114;&#101;&#118;&#105;&#101;&#119;&#46;&#103;&#105;&#102;&#34;&#32;&#47;&#62;&#60;&#47;&#99;&#101;&#110;&#116;&#101;&#114;&#62;" />
		<param name="@toggler_comp_b" type="nn_toggler" />
	</params>
</install>