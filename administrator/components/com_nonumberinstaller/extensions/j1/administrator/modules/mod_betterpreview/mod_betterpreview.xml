	<files>
		<filename module="mod_betterpreview">mod_betterpreview.php</filename>
		<folder>betterpreview</folder>
	</files>

	<!-- Parameters -->
	<params addpath="/plugins/system/nnframework/fields">
		<param name="@loadlanguage" type="nn_loadlanguage" extension="mod_betterpreview" />
		<param name="@license" type="nn_license" extension="BETTER_PREVIEW" />
		<param name="@version" type="nn_version" extension="BETTER_PREVIEW" xml="administrator/modules/mod_betterpreview/mod_betterpreview.xml" />
		<param name="@dependency" type="nn_dependency"
			label="BP_THE_SYSTEM_PLUGIN"
			file="/plugins/system/betterpreview.php" />
		<param name="@header" type="nn_header"
			label="BETTER_PREVIEW"
			description="BETTER_PREVIEW_DESC"
			image="/plugins/system/betterpreview/images/logo.png"
			image_w="120" image_h="160"
			url="http://www.nonumber.nl/betterpreview"
			help_url="http://www.nonumber.nl/betterpreview" />

		<param name="@notice_settings" type="nn_plaintext" description="BP_SETTINGS" />
	</params>
